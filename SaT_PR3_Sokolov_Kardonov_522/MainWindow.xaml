<Window x:Class="SaT_PR3_Sokolov_Kardonov_522.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaT_PR3_Sokolov_Kardonov_522"
        mc:Ignorable="d"
        Title="MainWindow" Height="289" Width="661" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="109,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Операнд"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="109,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Операнд"/></TextBlock>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="73,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="textBox1_TextChanged"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Margin="73,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="textBox2_TextChanged"/>
        <GroupBox HorizontalAlignment="Left" Header="Операция" Margin="233,70,0,61" Width="82">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <RadioButton x:Name="radioButton1" Content="+" Grid.Row="0" VerticalAlignment="Center"/>
                <RadioButton x:Name="radioButton2" Content="-" Grid.Row="1" VerticalAlignment="Center"/>
                <RadioButton x:Name="radioButton3" Content="*" Grid.Row="2" VerticalAlignment="Center"/>
                <RadioButton x:Name="radioButton4" Content="/" Grid.Row="3" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
        <Button x:Name="button1" Content="Вычислить" HorizontalAlignment="Left" Margin="335,117,0,0" VerticalAlignment="Top" Height="37" Width="111" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="500,116,0,0" TextWrapping="Wrap" Text="Результат" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Margin="466,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
    </Grid>
</Window>
